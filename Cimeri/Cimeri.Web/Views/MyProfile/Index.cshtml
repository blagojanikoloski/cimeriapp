                        <div data-thq="thq-mobile-menu-nav"
                             data-role="Nav"
                             class="my-profile-nav1">
                            <div class="my-profile-container1">
                                <h2 class="my-profile-text01">OnConf</h2>
                                <div data-thq="thq-close-menu" class="my-profile-menu-close">
                                    <svg viewBox="0 0 1024 1024" class="my-profile-icon04">
                                        <path d="M810 274l-238 238 238 238-60 60-238-238-238 238-60-60 238-238-238-238 60-60 238 238 238-238z"></path>
                                    </svg>
                                </div>
                            </div>
                            <nav data-thq="thq-mobile-menu-nav-links"
                                 data-role="Nav"
                                 class="my-profile-nav2">
                                <span class="navLink my-profile-text02">About</span>
                                <span class="navLink my-profile-text03">Features</span>
                                <span class="navLink my-profile-text04">Pricing</span>
                                <span class="navLink my-profile-text05">Team</span>
                                <span class="navLink my-profile-text06">Blog</span>
                            </nav>
                            <div class="my-profile-button-container">
                                <button class="my-profile-login button">Login</button>
                                <button class="button my-profile-register1">Register</button>
                            </div>
                            <div class="my-profile-icon-group">
                                <div class="my-profile-icons">
                                    <svg viewBox="0 0 950.8571428571428 1024"
                                         class="my-profile-icon06">
